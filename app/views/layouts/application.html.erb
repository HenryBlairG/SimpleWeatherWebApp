<!DOCTYPE html>
<html>
  <head>
    <title>Simple Weather Web App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'hello_vue', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="navigation">
      <ul>
        <li> <%= link_to "All Cities", root_path %> </li>
        <li> <%= link_to "ForeCast",   forecast_city_index_path %> </li>
      </ul>
    </section>
    <%= yield %>
  </body>
</html>
